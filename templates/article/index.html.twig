{% extends 'layout.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Evenement</h1>

        {% for article in articles %}
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="{{asset('build/image-1.jpg') }}" class="card-img" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.title }}</h5>
                            <p class="card-text">{{ article.content }}</p>
                            <p class="card-text"><small class="text-muted">{{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</small></p>
                        </div>
                    </div>
                </div>
            </div

                    <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>

        {% else %}
            <div>
                <p colspan="6">no records found</p>
            </div>
        {% endfor %}

    <a href="{{ path('article_new') }}">Create new</a>
{% endblock %}
