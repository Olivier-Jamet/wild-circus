{% extends 'layout.html.twig' %}

{% block title %}Tarif index{% endblock %}

{% block body %}
    <h1>Tarif index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Adulte</th>
            <th>Prix Adulte</th>
            <th>Enfant</th>
            <th>Prix Enfant</th>
        </tr>
        </thead>
        <tbody>
        {% for tarif in tarifs %}
            <tr>
                <td>{{ tarif.adult }}</td>
                <td>{{ tarif.adultprice }}</td>
                <td>{{ tarif.chid }}</td>
                <td>{{ tarif.childprice }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
