{% extends 'layout.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Title</th>
            <td>{{ article.title }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ article.content }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>{{ article.image }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('article_index') }}">back to list</a>

{% endblock %}
