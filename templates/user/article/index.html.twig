{% extends 'layout.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <section class="container">
        <h1>Ev√®nement</h1>

        {% for article in articles %}
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="{{ asset('build/image-1.jpg') }}" class="card-img" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.title }}</h5>
                            <p class="card-text">{{ article.content }}</p>
                            <p class="card-text"><small
                                        class="text-muted">{{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</small>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <a class="btn btn-secondary mb-1" href="{{ path('user_article_show', {'id': article.id}) }}">Voir</a>
        {% else %}
            <p colspan="6">no records found</p>
        {% endfor %}
    </section>
{% endblock %}
