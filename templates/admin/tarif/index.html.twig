{% extends 'admin/index.html.twig' %}

{% block title %}Tarif index{% endblock %}

{% block body %}
    <h1>Tarif index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Adult</th>
                <th>Adultprice</th>
                <th>Chid</th>
                <th>Childprice</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tarif in tarifs %}
            <tr>
                <td>{{ tarif.id }}</td>
                <td>{{ tarif.adult }}</td>
                <td>{{ tarif.adultprice }}</td>
                <td>{{ tarif.chid }}</td>
                <td>{{ tarif.childprice }}</td>
                <td>
                    <a href="{{ path('admin_tarif_show', {'id': tarif.id}) }}">show</a>
                    <a href="{{ path('admin_tarif_edit', {'id': tarif.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_tarif_new') }}">Create new</a>
{% endblock %}
