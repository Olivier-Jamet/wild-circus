    <table class="table">
        <tbody>
            <tr>
                <th>Adulte</th>
                <td>{{ tarif.adult }}</td>
            </tr>
            <tr>
                <th>Prix Adulte</th>
                <td>{{ tarif.adultprice }}</td>
            </tr>
            <tr>
                <th>Enfant</th>
