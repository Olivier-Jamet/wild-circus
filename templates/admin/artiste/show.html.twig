{% extends 'admin/index.html.twig' %}

{% block title %}Artiste{% endblock %}

{% block body %}
    <h1>Artiste</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ artiste.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ artiste.content }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ artiste.image }}</td>
            </tr>
            <tr>
                <th>Spécialité</th>
                <td>{{ artiste.specialite }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary mb-1" href="{{ path('admin_artiste_index') }}">Retour</a>

    <a class="btn btn-secondary mb-1" href="{{ path('admin_artiste_edit', {'id': artiste.id}) }}">Modifier</a>

    {{ include('admin/artiste/_delete_form.html.twig') }}
{% endblock %}
