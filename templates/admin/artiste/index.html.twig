{% extends 'admin/index.html.twig' %}

{% block title %}Artistes{% endblock %}

{% block body %}
    <h1>Artistes</h1>

    <a class="btn btn-secondary mb-1" href="{{ path('admin_artiste_new') }}">Créer un nouvel Artiste</a>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Contenu</th>
                <th>Image</th>
                <th>Spécialité</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artiste in artistes %}
            <tr>
                <td>{{ artiste.name }}</td>
                <td>{{ artiste.content }}</td>
                <td>{{ artiste.image }}</td>
                <td>{{ artiste.specialite }}</td>
                <td>
                    <a class="btn btn-secondary mb-1" href="{{ path('admin_artiste_show', {'id': artiste.id}) }}">Voir</a>
                    <a class="btn btn-secondary mb-1" href="{{ path('admin_artiste_edit', {'id': artiste.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
